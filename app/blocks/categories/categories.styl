.categories
	display block
	&__in
		@extends .in
		padding-top 74px
		padding-bottom 19px
		clearfix()
	&__category
		min-height 513px

	&__category_b
		background url('../images/content/cat-b-img.jpg') 50% 0 no-repeat
		.categories__cta-w
			&:after
				bottom -68px
				left -96px
				retinaSprite($arrow_down_left_group)
		.categories__row_cat-b
			padding-top 38px
	&__category_c
		background url('../images/content/cat-c-img.jpg') 50% 0 no-repeat
		.categories__cta-w
			&:after`
				bottom 0
				right 0
				retinaSprite($arrow_down_right_group)
	&__category_d
		background url('../images/content/cat-d-img.jpg') 50% 0 no-repeat
		.categories__cta-w
			&:after
				bottom 0
				left 0
				retinaSprite($arrow_down_left_2_group)
	&__category_e
		background url('../images/content/cat-e-img.jpg') 50% 0 no-repeat
		.categories__cta-w
			&:after
				bottom 0
				right 0
				retinaSprite($arrow_down_right_group)
	&__row
		clearfix()

	&__content
		width 505px

	&__content_right
		float right
	&__content_left
		float left

	&__title
		margin-bottom 13px
		padding-right 70px
		@extends .title
		text-align center
		strong
			display block
			font-family $pfb
			font-size 30px
			color #f26c4f
	&__text
		margin-bottom 30px
	&__list
		margin-bottom 22px
		padding-left 23px
		font-size 18px
	&__item
		position relative
		line-height 1.2
		&:before
			vcentery()
			left -23px
			content ""
			width 11px
			height 11px
			background-color #258bcc
			border-radius 50%
	&__duration
		margin-bottom 0
		padding-left 47px
		font-family $pfb
		font-size 18px
		strong
			font-size 24px
	&__price
		margin-bottom 22px
		padding-left 13px
		font-family $pfb
		font-size 30px
		color #f26c4f
	&__cta
		position relative
		z-index 2
		margin-right 33px
		margin-left -33px

		font-size 24px
		color #FFF
		text-align center
		p
			margin-bottom 1px
			line-height 1.2
			span
				font-family $pfb
		&:after,
		&:before
			position absolute
			z-index 0
			top 16px
			content ""
		&:before
			left -26px
			retinaSprite($badge_left_group)
		&:after
			right -26px
			retinaSprite($badge_right_group)
	&__cta-w
		position relative
		background-color #258bcc
		z-index 1
		padding-top 8px
		padding-bottom 10px
		&:after
			position absolute
			content ""


