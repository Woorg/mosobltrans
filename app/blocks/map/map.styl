.map
	position relative
	display block
	&:after
		position absolute
		top -1px
		left -10px
		right 0
		min-height 83px
		max-height 163px
		background url('../images/general/map-top.svg') 50% 0 / cover no-repeat
		content ""
	&__in
		position relative
		@extends .in
	&__contacts
		position absolute
		z-index 1
		top 33px
		left 16px
	&__area-w
		position relative
		padding-top 29%
		// padding-top 21%

	&__area
		position absolute
		z-index 0
		top 0
		left 0
		bottom 0
		right 0


.contacts
	padding-top 75px
	padding-right 54px
	padding-bottom 81px
	padding-left 58px
	width 445px
	min-height 338px
	background url('../images/general/contacts-bg.svg') 0 0 no-repeat
	text-align center
	&__title
		margin-bottom 11px
		@extends .title
	&__address
		margin-bottom 8px
		line-height 1
	&__phone
		margin-bottom 32px
	&__button
		@extends .button
