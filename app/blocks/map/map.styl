.map
	position relative
	display block
	overflow hidden
	&:after
		position absolute
		top -1px
		left -10px
		right 0
		min-height 83px
		max-height 163px
		background url('../images/general/map-top.svg') 50% 0 / cover no-repeat
		content ""
		+r($m)
			display none
	&__in
		position relative
		@extends .in
		+r($m)
			padding-right 0
			padding-left 0
		// &:before
		// 	+r($m)
		// 		position absolute
		// 		z-index 0
		// 		top -6px
		// 		left 0
		// 		width 320px
		// 		height 101px
		// 		background url("../images/general/contacts-shadow.png") 0 0 no-repeat
		// 		content ''

	&__contacts
		position absolute
		z-index 1
		top 30px
		left 16px
		+r($d-l)
			left 1
		+r($d)
			position relative
		+r($m)
			top 9px
	&__area-w
		position relative
		padding-top 29%
		// padding-top 21%
		+r($d-l)
			padding-top 48%
		+r($t)
			padding-top 60%
		+r($m)
			padding-top 81%


	&__area
		position absolute
		z-index 0
		top 0
		left 0
		bottom 0
		right 0


.contacts
	padding-top 75px
	padding-right 54px
	padding-bottom 81px
	padding-left 58px
	width 445px
	min-height 338px
	background url('../images/general/contacts-bg.svg') 0 0 / cover no-repeat
	text-align center
	+r($t)
		padding-top 30px
		padding-right 4px
		padding-bottom 30px
		padding-left 3px
		width 100%
	+r($m)
		left 0
		padding-top 56px
		min-height 340px
		background url('../images/general/contact-bg.png') 0 0 no-repeat
	&__w
		+r($t)
			vcenter()
			width 80%
		+r($m-l)
			width 95%


	&__title
		margin-bottom 11px
		@extends .title
		+r($m)
			margin-bottom 21px
	&__address
		margin-bottom 8px
		line-height 1
		b
			display inline-block
		+r($d)
			display inline-block
		+r($m)
			margin-left 36px
			margin-right 26px
			margin-bottom 20px
			text-align center
	&__phone
		margin-bottom 32px
		b
			display inline-block
		+r($d)
			display inline-block
		+r($m)
			margin-bottom 25px
			font-size 28px
			span
				padding-right 0
	&__button
		width 100%
		@extends .button
		text-decoration none
		+r($t)
			display block
