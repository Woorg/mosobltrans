.tabs
	&__in
		@extends .in
	&__nav
		position relative
		z-index 1
		font-size 0
		white-space nowrap
	&__link
		position relative
		border 5px solid #f8f8f8
		margin-left 30px
		padding 36px 11px 35px 110px
		display inline-block
		vertical-align middle
		background-color #ffffff
		color #3f3f3f
		font-size 24px
		text-align right
		text-decoration none
		white-space nowrap
		border-radius 5px
		tr(background-image .3s ease)
		+r($d-l)
			margin-left 2.6%
			padding 36px 11px 35px 90px
			width 23%
			margin-bottom 10px
			// display block
			text-align center
		+r($d)
			margin-left 0
			width auto
			display block
		+r($t)
			text-align center
		b
			position relative
			&:after
				vcentery()
				left -88px
				content ""
		span
			font-family $pfb
			color #f26c4f
		&:hover
			text-decoration none
		&:first-child
			margin-left 0
	&__link_active
		// padding 48px 11px 48px 110px
		padding 38px 11px 34px 110px
		border-color transparent
		background url('../images/general/cat-tab-active.png') 50% 0 / cover no-repeat
		color #fff
		text-decoration none
		tr(background-image .3s ease)
		+r($d-l)
			border 5px solid #ffffff
			padding 36px 11px 35px 90px
			background #F26C4F
		+r($d)
			width auto

		+r($m-l)
			border none
			padding 48px 11px 48px 80px
			background-color transparent
			background url('../images/general/cat-tab-active.png') 50% 0 / 100% 100% no-repeat

		span
			color #FFF
	&__link_cat-b
		b
			&:after
				left -88px
				retinaSprite($cat_b_group)
		&.tabs__link_active
			b
				&:after
					retinaSprite($cat_b_active_group)
	&__link_cat-c
		b
			&:after
				left -88px
				retinaSprite($cat_c_group)
		&.tabs__link_active
			b
				&:after
					retinaSprite($cat_c_active_group)
	&__link_cat-d
		b
			&:after
				retinaSprite($cat_d_group)
		&.tabs__link_active
			b
				&:after
					retinaSprite($cat_d_active_group)
	&__link_cat-e
		b
			&:after
				retinaSprite($cat_e_group)
		&.tabs__link_active
			b
				&:after
					retinaSprite($cat_e_active_group)

	&__content
		margin-top -20px

	&__tab
		display none
		// tr(all .3s ease)
	&__tab_active
		display block
		font-size 14px
		color #000
		// tr(all .3s ease)

