.header
	display block
	border 1px solid #e2e6ed
	background-color rgba(255, 255, 255, .32)
	&__in
		@extends .in
		min-height 54px
		font-size 0
	&__logo,
	&__address,
	&__phone
		display inline-block
		vertical-align top
		text-decoration none
		line-height 1
	&__logo
		margin-top 2px
	&__address
		margin-top 14px
		margin-left 115px
	&__phone
		margin-top 16px
		float right

.logo
	width 342px
	font-family $l
	font-size 0
	line-height 1
	color #3f3f3f
	text-transform uppercase
	&__mos,
	&__obl,
	&__trans
		display inline-block
		font-size 40px
		white-space nowrap
		text-transform uppercase
		&::first-letter
			font-size 48px
			color #f26c4f
.logo_style-sec
	color #FFF
	.logo__mos,
	.logo__obl,
	.logo__trans
		color #FFF
		&::first-letter
			color #FFF


.address
	position relative
	padding-left 20px
	color #3f3f3f
	font-size 18px
	line-height 1.2
	span
		position relative

		&:after
			position absolute
			top 100%
			left 0
			right 0
			width 100%
			content ""
			background transparent
			background linear-gradient(#f5f5f5, #f5f5f5) padding-box, repeating-linear-gradient(-45deg, black 0, black 25%, transparent 0, transparent 50%) 0 / 1em .9em
			border-bottom 1px solid transparent
	&:hover
		span
			&:after
				background linear-gradient(#f5f5f5, #f5f4f5) padding-box, repeating-linear-gradient(-45deg, transparent 0, transparent 25%, transparent 0, transparent 50%) 0 / 1em .9em


	&:after
		position absolute
		top 1px
		left 0
		width 15px
		height 16px
		background url('../images/general/marker.svg') 0 0 no-repeat
		content ''
	&:before
		position absolute
		bottom 0
		left 0
		width 14px
		height 2px
		background #f26c4f
		content ''
.address_style-sec
	color #FFF
	&:after
		background url('../images/general/marker-sec.svg') 0 0 no-repeat
	&:before
		background #FFF
.phone
	position relative
	padding-left 25px
	display inline-block
	font-family $pfl
	font-size 28px
	color #3f3f3f
	span
		color #f26c4f
	&:after
		position absolute
		top 50%
		left 0
		margin-top -9px
		width 18px
		height 18px
		background url('../images/general/phone.svg') 0 0 no-repeat
		content ""

.phone_style-sec
	color #FFF
	text-decoration none
	&:after
		background url('../images/general/phone-sec.svg') 0 0 no-repeat
