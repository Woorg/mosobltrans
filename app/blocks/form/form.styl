.form
	margin auto
	padding-top 40px
	padding-right 21px
	padding-bottom 48px
	padding-left 22px
	width 364px

	&__title
		margin-bottom 10px
		padding-left 64px
		padding-right 64px
		font-size 24px
		line-height 1.2
		text-transform uppercase
		text-align center
	&__form
		text-align center

	&__field
		margin-bottom 10px
	&__input
		border 1px solid #dddddd
		padding-top 13px
		padding-right 12px
		padding-bottom 8px
		padding-left 12px
		width 100%
		background-color #ffffff
		color #3f3f3f
		font-family $pfti
		font-size 14px
		border-radius 5px
		+placeholder()
			color #8e9393
	&__captcha
		margin-top 16px
		margin-bottom 9px
	&__submit
		@extends .button
		width 100%

.form_wide
	width 682px
	.form__w,
	.form__captcha
		margin-left 20px
		display inline-block
		vertical-align top
		width 300px
		&:first-child
			margin-left 0
	.form__submit
		margin 20px auto 0
		width 321px

