			.footer__row
				a.footer__logo.logo.logo_style-sec(href="#logo")
					span.logo__mos Мос
					span.logo__obl обл
					span.logo__trans транс

				nav.footer__nav
					ul.footer__list
						li.footer__item
							a(href="#link") Категория B
						li.footer__item
							a(href="#link") Категория С
						li.footer__item
							a(href="#link") Категория D
						li.footer__item
							a(href="#link") Категория E
						li.footer__item
							a(href="#link") Обмен прав СНГ
						li.footer__item
							a(href="#link") Контакты
