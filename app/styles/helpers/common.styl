html,
body
	height 100%

.main
	min-height 100%
	margin-bottom -260px

* html
	.main
		height: 100%

.page__buffer
	height: 260px


.page
	font-family $pfr
	font-size 18px
	line-height 1.4
	color #3f3f3f
	background $bg-c url('../images/general/bg.png') 0 0
 	t-html()


.in
	margin auto
	padding-left 15px
	padding-right 15px
	max-width 1170px

// Buttons

.button
	border none
	padding-top 12px
	padding-left 87px
	padding-bottom 11px
	padding-right 91px
	display inline-block
	vertical-align top
	background-color #f26c4f
	color #FFF
	font-family $pfl
	font-size 18px
	text-align center
	line-height 1.2
	box-shadow inset 0 -5px 0 rgba(0, 0, 0, 0.08), inset 0 0 4px rgba(177, 51, 24, 0.36)
	border-radius 5px
	&:hover
		background-color #d54121

// Title

.title
	font-size 24px
	text-transform uppercase

